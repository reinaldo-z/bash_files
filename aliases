#Add to ~/.bashrc: source path_of_tis_file/aliases

#CHANGE DIRECTORY ALIASES
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias cddoc='cd ~/Documentos/estudios/doctorado/'
alias cdjas='cd ~/Documentos/clases/Jassa/'

#LS ALIASES
alias cl1='clear ; ls -1'
alias cls='clear ; ls'
alias cl1a='clear ; ls -1A'
alias cla='clear ; ls -A'
alias l='ls'
alias l1='ls -1'
alias l1r='ls -1r'
alias l1a='ls -1A'
alias l1ar='ls -1Ar'
alias la='ls -A'
alias ll='ls -lhA'

#COMMON BASH USED ALIASES
alias cl='clear'
# alias countcol='awk '{print NF}' file | sort -nu | tail -n 1'
alias emacs='emacs -nw'
alias grepn='grep -nr'
alias scl='screen -ls'
alias scr='screen -R'
alias scs='screen -S'
alias x='exit'

#GIT ALIASES
alias ga='git add *'
alias gb='git branch'
alias gch='git checkout'
alias gcm='git commit'
alias gpo='git push origin'
alias gpu='git pull origin'
alias gs='git status'

#SCRIPT ALIASES
